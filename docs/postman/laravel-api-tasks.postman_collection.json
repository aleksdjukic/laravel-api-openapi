{
  "info": {
    "name": "Laravel API â€“ Tasks",
    "description": "Postman collection for Task API (Laravel + OpenAPI)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000"
    }
  ],
  "item": [
    {
      "name": "List Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/tasks",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "tasks"]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Buy groceries\",\n  \"description\": \"Milk, bread, eggs\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/tasks",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "tasks"]
        }
      }
    },
    {
      "name": "Show Task",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/v1/tasks/1",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "tasks", "1"]
        }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated task\",\n  \"completed\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/tasks/1",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "tasks", "1"]
        }
      }
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/api/v1/tasks/1",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "tasks", "1"]
        }
      }
    }
  ]
}
